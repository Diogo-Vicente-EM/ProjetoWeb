<p>
    <h1 style="display:inline">Tabela De Alunos</h1>
    <a class=" btn btn-success btn-lg float-end"  asp-action="Adicionar">Novo Aluno</a>  
 </p>
<hr />
<form asp-controller="Aluno" asp-action="Index" method="get">
    <p>
        <input type="text" placeholder="Matricula ou Nome Aluno" asp-for="ConteudoPesquisa" style="width:393px "/>
        <input type="submit" value="Buscar" class="btn btn-success btn-sm float-sm-none position-absolute"  />     
    </p> 
</form>
<div class="table-responsive">
<table class="table table-striped table-bordered align-middle ">
    <thead>
       
        <tr style="color:white; background-color: seagreen ; text-align:center ">
            <th style ="width:110px">
                @Html.DisplayNameFor(model => model.Alunos[0].Matricula)
            </th>
            <th  >
                @Html.DisplayNameFor(model => model.Alunos[0].AlunoNome)
            </th>
            <th style ="width:100px ;text-align:center">
                @Html.DisplayNameFor(model => model.Alunos[0].Sexo)
            </th>
            <th style ="width:190px ; text-align:center"> 
                @Html.DisplayNameFor(model => model.Alunos[0].DataNascimento)
            </th>        
            <th style ="width:150px;text-align:center">
                @Html.DisplayNameFor(model => model.Alunos[0].CPF)
            </th>
            <th style="width:150px">
                Opção
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Alunos)
        {
            <tr>
                <td style ="text-align:center">
                    @Html.DisplayFor(modelItem => item.Matricula)
                </td>
                <td >
                    @Html.DisplayFor(modelItem => item.AlunoNome)
                </td>
                <td style ="text-align:center">
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td style ="text-align:center">
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td style ="text-align:center">
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>                
                <td style = "align=center ; text-align:center">                 
                    <a class ="btn btn-sm btn-outline-success" asp-action="Editar" asp-route-id="@item.Matricula">Editar</a>                     
                    <a class ="btn btn-sm btn-outline-danger" asp-action="Excluir" asp-route-id="@item.Matricula">Excluir</a>                 
                </td>
            </tr>
        }
    </tbody>
</table>
</div>